<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_lista_em_compras_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:clickable="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/activity_lista_em_compras_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:baselineAlignBottom="false"
            android:clickable="true"
            android:cropToPadding="false"
            android:focusable="true"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#00695C" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/activity_lista_em_compras_fab"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Total: R$ "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/activity_lista_em_compras_preco_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@id/activity_lista_em_compras_fab"
            android:layout_toEndOf="@id/textView"
            android:textSize="30sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/activity_lista_em_compras_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_lista_em_compras_bottom">

    </ListView>


</RelativeLayout>